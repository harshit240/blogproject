<%- include('../../front/header.ejs') %>

    <section class="dashboard-wrap mtb-40">
        <div class="container">
            <div class="body-content">
                <div class="row">
                    <div class="col-md-3">
                        <%- include('../adminsidebar.ejs') %>
                    </div>
                    <div class="col-md-9">
                        <div class="dash-right">
                            <div class="dash-header">
                                <div class="dash-title">
                                    <h1 style="color: #386576;">Blogs</h1>
                                </div>
                                <div class="dash-nav">
                                    <a href="/admin/addblogs" class="btn btn-success" style="background-color: #ffa500; border: none;">Add Blog</a>
                                </div>
                            </div>
                            <table class="table-bordered table-striped">
                                <tr class=" table_heading text-white text-center">
                                    <th>ID No.</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                                <% var i = 1 %>
                                <% d.forEach((item)=>{ %>
                                    <tr>
                                        <td>
                                            <%= i++ %>
                                        </td>
                                        <td>
                                            <%= item.title %>
                                        </td>
                                        <td>
                                            <%= item.description %>
                                        </td>
                                        <td>
                                            <img src="<%= item.image.url %>" alt="" width="80px">
                                        </td>
                                        <td>
                                            <a href="/admin/blog_view/<%= item._id %>" class="btn btn-info btn-sm action-btn"><i class="fa-solid fa-eye"></i></a>
                                            <a href="/admin/blog_edit/<%= item._id %>" class="btn btn-info btn-sm action-btn" ><i class="fa-regular fa-pen-to-square"></i></a>
                                            <a href="/admin/delete_blog/<%= item._id %>" class="btn btn-info btn-sm action-btn" ><i class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    <%- include('../../front/footer.ejs') %>